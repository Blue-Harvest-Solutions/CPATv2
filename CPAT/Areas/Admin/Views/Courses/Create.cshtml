@model CPAT.Models.Courses
@{
    ViewData["Title"] = "Create";
}

<br />

<h2 class="text-info">Add Course</h2>

<form method="post" asp-action="Create">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2 text-right">
                <label asp-for="CourseID"></label>

            </div>
            <div class="col-3">
                <input asp-for="CourseID" class="form-control" />
            </div>
            <span asp-validation-for="CourseID" class="text-danger"></span>
            <div class="col-2 text-right">
                <label asp-for="CourseName"></label>

            </div>
            <div class="col-5">
                <input asp-for="CourseName" class="form-control" />
            </div>
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>
        
        <br />

        <div class="form-group row">
            <div class="col-2 text-right">
                <label asp-for="Description"></label>

            </div>
            <div class="col-10">
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <br />

        <div class="form-group row">
            <div class="col-2 text-right">
                <label asp-for="CreditHours"></label>

            </div>
            <div class="col-2">
                <input type="number" asp-for="CreditHours" class="form-control" />
            </div>
            <span asp-validation-for="CreditHours" class="text-danger"></span>
            <div class="col-3 text-right">
                <label asp-for="SeasonAvailability"></label>

            </div>
            <div class="col-5">
                <select asp-for="SeasonAvailability" class="form-control">
                    <option value="1">Fall Only</option>
                    <option value="2">Fall and Spring</option>
                    <option value="3">Spring Only</option>
                    <option value="4">Fall, Spring, and Summer</option>
                    <option value="5">Summer Only</option>
                    <option class="text-danger" value="6">Not Currently Offered</option>
                </select>
            </div>
            <span asp-validation-for="SeasonAvailability" class="text-danger"></span>
        </div>
        
        <br />

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}