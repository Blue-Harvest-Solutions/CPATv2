@model IEnumerable<CPAT.Models.Courses>
@{
    ViewData["Title"] = "Index";
}

<br /><br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Course List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Add New Major</a>
    </div>
</div>

<br />

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>@Html.DisplayNameFor(m => m.CourseID)</th>
            <th>@Html.DisplayNameFor(m => m.CourseName)</th>
            <th>@Html.DisplayNameFor(m => m.EstSeason)</th>
            <th></th>
            <th></th>
        </tr>

        @foreach(var c in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(m => c.CourseID)
            </td>
            <td>
                @Html.DisplayFor(m => c.CourseName)
            </td>
            <td>
                @switch (c.EstSeason)
                {
                    
                    case Season.FaSp:
                        Write("Fall and Spring");
                        break;
                    case Season.FaSpSu:
                        Write("Fall, Spring, and Summer");
                        break;
                    case Season.SpSu:
                        Write("Spring and Summer");
                        break;
                    case Season.SuFa:
                        Write("Summer and Fall");
                        break;
                        
                    default:
                        Write(c.EstSeason);
                        break;
                }
            </td>
            <td>
                <partial name="_TableButtonPartial" model="c.Id" />
            </td>
        </tr>
        }
    </table>
</div>